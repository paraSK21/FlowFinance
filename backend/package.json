{
  "name": "flowfinance-backend",
  "version": "1.0.0",
  "description": "FlowFinance Backend API - AI-Powered Business Finance Management",
  "main": "src/server.js",
  "scripts": {
    "start": "node src/server.js",
    "dev": "nodemon src/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "lint": "eslint src/**/*.js",
    "lint:fix": "eslint src/**/*.js --fix",
    "migrate": "node src/migrations/run.js",
    "seed": "node src/seeders/run.js",
    "db:reset": "npm run db:drop && npm run db:create && npm run migrate && npm run seed",
    "db:create": "createdb flowfinance",
    "db:drop": "dropdb flowfinance --if-exists",
    "logs": "tail -f logs/app.log",
    "pm2:start": "pm2 start src/server.js --name flowfinance-api",
    "pm2:stop": "pm2 stop flowfinance-api",
    "pm2:restart": "pm2 restart flowfinance-api",
    "pm2:logs": "pm2 logs flowfinance-api",
    "docker:build": "docker build -t flowfinance-backend .",
    "docker:run": "docker run -p 5000:5000 --env-file .env flowfinance-backend"
  },
  "keywords": [
    "finance",
    "accounting",
    "invoicing",
    "tax",
    "ai",
    "business",
    "cash-flow",
    "forecasting"
  ],
  "author": "FlowFinance Team",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "dependencies": {
    "@google/generative-ai": "^0.24.1",
    "@huggingface/inference": "^4.13.5",
    "@sendgrid/mail": "^8.1.6",
    "axios": "^1.13.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^6.8.1",
    "helmet": "^7.0.0",
    "jsonwebtoken": "^9.0.1",
    "multer": "^1.4.5-lts.1",
    "node-cron": "^3.0.3",
    "nodemailer": "^7.0.11",
    "pg": "^8.11.0",
    "pg-hstore": "^2.3.4",
    "plaid": "^14.1.0",
    "razorpay": "^2.9.6",
    "sequelize": "^6.32.1",
    "sharp": "^0.32.4",
    "socket.io": "^4.8.1",
    "stripe": "^20.0.0",
    "tesseract.js": "^4.1.1",
    "twilio": "^4.23.0"
  },
  "devDependencies": {
    "eslint": "^8.45.0",
    "jest": "^29.6.1",
    "nodemon": "^3.0.1",
    "supertest": "^6.3.3"
  }
}
