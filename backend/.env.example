# ====================================
# DATABASE (Required)
# ====================================
DATABASE_URL=postgresql://username:password@localhost:5432/flowfinance
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flowfinance
DB_USER=your_postgres_username
DB_PASSWORD=your_postgres_password

# ====================================
# SERVER (Required)
# ====================================
PORT=5000
NODE_ENV=development
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_abc123xyz789
FRONTEND_URL=http://localhost:3001

# ====================================
# PLAID API (Required for Bank Connection)
# Get from: https://dashboard.plaid.com
# ====================================
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_sandbox_secret_here
PLAID_ENV=sandbox
PLAID_PRODUCTS=transactions,auth
PLAID_COUNTRY_CODES=US,CA

# ====================================
# STRIPE (Required for Payments)
# Get from: https://dashboard.stripe.com/apikeys
# ====================================
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ====================================
# AI/ML - GOOGLE GEMINI (Free Tier - Recommended)
# Get from: https://aistudio.google.com/app/apikey
# Multiple API keys for automatic fallback when rate limits are hit
# The service will automatically rotate through all keys when one hits quota
# Using Gemma models (gemma-3-1b-it) for best rate limits: 30+ requests per key
# With 5 keys: ~150 requests before cooldown (30 Ã— 5)
# ====================================
GEMINI_API_KEY_1=your_gemini_api_key_1_here
GEMINI_API_KEY_2=your_gemini_api_key_2_here
GEMINI_API_KEY_3=your_gemini_api_key_3_here
GEMINI_API_KEY_4=your_gemini_api_key_4_here
GEMINI_API_KEY_5=your_gemini_api_key_5_here

# Optional: HuggingFace (alternative to Gemini)
# HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here

# Optional: OpenAI (if you want better AI, costs money)
# OPENAI_API_KEY=sk-your_openai_api_key_here

# ====================================
# TWILIO (Optional - for SMS/WhatsApp)
# Get from: https://console.twilio.com
# ====================================
# TWILIO_ACCOUNT_SID=ACxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ====================================
# AWS S3 (Optional - for file storage)
# ====================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=flowfinance-documents

# ====================================
# REDIS (Optional - for caching)
# ====================================
# REDIS_URL=redis://localhost:6379

# ====================================
# EMAIL (Optional - SendGrid)
# ====================================
# SENDGRID_API_KEY=SG.xxxxx
# FROM_EMAIL=noreply@flowfinance.com

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100