# Environment Configuration
NODE_ENV=development

# Server Configuration
PORT=5000
BACKEND_URL=http://localhost:5000
FRONTEND_URL=http://localhost:5173

# Database Configuration (SUPABASE ONLY - Required)
# Get from: https://supabase.com/dashboard/project/_/settings/database
# Select "Connection pooling" tab and copy the connection string
DATABASE_URL=postgresql://postgres.xxxxxxxxxxxxx:your_password@aws-0-region.pooler.supabase.com:6543/postgres

# JWT Secret (Generate a strong random string)
JWT_SECRET=your_jwt_secret_here_change_in_production

# Gemini AI API Keys (for transaction categorization)
# Get keys from: https://makersuite.google.com/app/apikey
# Add multiple keys for better rate limits (30 requests per key)
GEMINI_API_KEY_1=your_gemini_api_key_1
GEMINI_API_KEY_2=your_gemini_api_key_2
GEMINI_API_KEY_3=your_gemini_api_key_3
GEMINI_API_KEY_4=your_gemini_api_key_4
GEMINI_API_KEY_5=your_gemini_api_key_5

# Plaid API (for bank connections - US/Canada)
# Get keys from: https://dashboard.plaid.com/
PLAID_CLIENT_ID=your_plaid_client_id
PLAID_SECRET=your_plaid_secret
PLAID_ENV=sandbox

# Email Service (for invoice notifications)
# Option 1: SendGrid
SENDGRID_API_KEY=your_sendgrid_api_key
SENDGRID_FROM_EMAIL=flowfinance06@gmail.com

# Option 2: SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=flowfinance06@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM=flowfinance06@gmail.com

# Twilio (for SMS notifications - optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# Stripe (for payment processing - optional)
STRIPE_SECRET_KEY=your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=your_stripe_webhook_secret

# AWS S3 (for receipt storage - optional)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=flowfinance-receipts

# Redis (for caching - optional but recommended for production)
REDIS_URL=redis://localhost:6379

# Sentry (for error tracking - optional but recommended for production)
SENTRY_DSN=your_sentry_dsn

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Session Configuration
SESSION_SECRET=your_session_secret_here_change_in_production

# Google OAuth (for Google Sign-In)
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret

# Feature Flags
ENABLE_ML_FORECASTING=false
ENABLE_RECEIPT_SCANNING=false
ENABLE_SMS_NOTIFICATIONS=false
ENABLE_WHATSAPP_NOTIFICATIONS=false

# Tax Settings
DEFAULT_TAX_COUNTRY=US
DEFAULT_TAX_STATE=CA

# Logging
LOG_LEVEL=info
