# ====================================
# DATABASE (Required)
# ====================================
DATABASE_URL=postgresql://username:password@localhost:5432/flowfinance
DB_HOST=localhost
DB_PORT=5432
DB_NAME=flowfinance
DB_USER=your_postgres_username
DB_PASSWORD=your_postgres_password

# ====================================
# SERVER (Required)
# ====================================
PORT=5000
NODE_ENV=development
JWT_SECRET=CHANGE_THIS_TO_A_LONG_RANDOM_STRING_abc123xyz789
FRONTEND_URL=http://localhost:3001

# ====================================
# PLAID API (Required for Bank Connection)
# Get from: https://dashboard.plaid.com
# ====================================
PLAID_CLIENT_ID=your_plaid_client_id_here
PLAID_SECRET=your_plaid_sandbox_secret_here
PLAID_ENV=sandbox
PLAID_PRODUCTS=transactions,auth
PLAID_COUNTRY_CODES=US,CA

# ====================================
# SETU API (For Indian Banks - Account Aggregator)
# Get from: https://setu.co/
# Docs: https://docs.setu.co/data/account-aggregator
# ====================================
SETU_BASE_URL=https://dg-sandbox.setu.co
SETU_CLIENT_ID=your_setu_client_id_here
SETU_CLIENT_SECRET=your_setu_client_secret_here
SETU_ORG_ID=your_setu_org_or_product_instance_id
SETU_REDIRECT_URL=http://localhost:3001/consent/callback
SETU_WEBHOOK_URL=http://localhost:5000/api/setu/webhook
SETU_WEBHOOK_SECRET=your_webhook_secret_for_signature_verification

# ====================================
# STRIPE (Required for Payments)
# Get from: https://dashboard.stripe.com/apikeys
# ====================================
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key_here
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# ====================================
# AI/ML - HUGGING FACE (Free Tier - Recommended)
# Get from: https://huggingface.co/settings/tokens
# ====================================
HUGGINGFACE_API_KEY=hf_your_huggingface_api_key_here

# Optional: OpenAI (if you want better AI, costs money)
# OPENAI_API_KEY=sk-your_openai_api_key_here

# ====================================
# TWILIO (Optional - for SMS/WhatsApp)
# Get from: https://console.twilio.com
# ====================================
# TWILIO_ACCOUNT_SID=ACxxxxx
# TWILIO_AUTH_TOKEN=your_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ====================================
# AWS S3 (Optional - for file storage)
# ====================================
# AWS_ACCESS_KEY_ID=your_aws_access_key
# AWS_SECRET_ACCESS_KEY=your_aws_secret_key
# AWS_REGION=us-east-1
# AWS_S3_BUCKET=flowfinance-documents

# ====================================
# REDIS (Optional - for caching)
# ====================================
# REDIS_URL=redis://localhost:6379

# ====================================
# EMAIL (Optional - SendGrid)
# ====================================
# SENDGRID_API_KEY=SG.xxxxx
# FROM_EMAIL=noreply@flowfinance.com

# ====================================
# RATE LIMITING
# ====================================
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100